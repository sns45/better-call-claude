{
  "name": "better-call-claude",
  "version": "3.0.0",
  "mcpName": "io.github.sns45/better-call-claude",
  "description": "Bi-directional communication for Claude Code via Voice Calls, SMS, and WhatsApp. Cross-channel context sharing between voice and WhatsApp.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "better-call-claude": "./dist/index.js"
  },
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "prepublishOnly": "npm run build",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "hono": "^4.6.0",
    "openai": "^4.77.0",
